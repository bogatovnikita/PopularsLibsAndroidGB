<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/small_padding">

    <ImageView
        android:id="@+id/icon_user_image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="@dimen/small_padding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/name_user_text_view"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/id_user_text_view"
        app:layout_constraintStart_toEndOf="@id/icon_user_image_view"
        app:layout_constraintTop_toTopOf="@id/icon_user_image_view"
        tools:text="Самый крутой программист" />

    <TextView
        android:id="@+id/id_user_text_view"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/icon_user_image_view"
        app:layout_constraintStart_toEndOf="@id/icon_user_image_view"
        app:layout_constraintTop_toBottomOf="@id/name_user_text_view"
        tools:text="777" />


</androidx.constraintlayout.widget.ConstraintLayout>